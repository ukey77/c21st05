{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmitOnError": true
  },
  "include": ["**/*.ts"], // 모든 .ts 파일 포함
  "exclude": ["node_modules", "**/*.spec.ts"] // node_modules와 테스트 파일 제외
}
